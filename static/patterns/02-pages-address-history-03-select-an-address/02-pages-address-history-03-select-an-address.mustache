{{> _assets/headers/default-header }}

<main id="content" role="main">
	{{> _assets/components/phase-banner(phase: "ALPHA", phase-desc: "Registers of Scotland - Pattern Library") }}

	<div class="grid-row">
		<div class="column-two-thirds">
			{{> _assets/typography/h1(label: "Your address history") }}

			<p>
				<span class="form-label-bold">Postcode</span>
				EH1 1EH {{> _assets/typography/link-page(label: "Change", url: "{{ link.pages-address-history-find-address }}") }}
			</p>

			<form action="{{ link.pages-playback-address }}" method="get">
				<fieldset>
					<legend class="visually-hidden">Your address history</legend>

					<div class="form-group">
						<label for="select-an-address">Please select from the following addresses</label>
						<select class="form-control" id="select-an-address">
							<option value="">6 addresses found</option>
							<option value="153/1 Wilson Street, Edinburgh EH1 1EH">153/1 Wilson Street, Edinburgh EH1 1EH</option>
							<option value="153/2 Wilson Street, Edinburgh EH1 1EH">153/2 Wilson Street, Edinburgh EH1 1EH</option>
							<option value="153/3 Wilson Street, Edinburgh EH1 1EH">153/3 Wilson Street, Edinburgh EH1 1EH</option>
							<option value="153/4 Wilson Street, Edinburgh EH1 1EH">153/4 Wilson Street, Edinburgh EH1 1EH</option>
							<option value="153/5 Wilson Street, Edinburgh EH1 1EH">153/5 Wilson Street, Edinburgh EH1 1EH</option>
							<option value="153/6 Wilson Street, Edinburgh EH1 1EH">153/6 Wilson Street, Edinburgh EH1 1EH</option>
						</select>
					</div>

					<details class="form-group">
						<summary>
							<span class="summary">I can't find the address in this list</span>
						</summary>

						<div class="panel panel-border-narrow">
							<p>Check that you've entered the correct postcode.</p>
							<p>If the postcode is correct, please contact your {{> _assets/typography/link-external(label: "local authority", url: "https://www.mygov.scot/find-your-local-council/") }}</p>
						</div>
					</details>

					<div class="form-group">
						{{> _assets/forms/date(label: "When did you move here?", hint: true, hint-msg: "For example, 3 1980", day: false) }}
					</div>

					{{> _assets/forms/button-primary(label: "Continue") }}
				</fieldset>
			</form>

		</div>
	</div>
</main>

{{> _assets/footer/default-footer }}
